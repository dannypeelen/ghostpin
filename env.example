# GhostPIN Environment Configuration

# Application
NODE_ENV=development
PORT=3001
LOG_LEVEL=debug

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ghostpin
DB_USER=ghostpin
DB_PASSWORD=your_secure_password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Security
JWT_SECRET=your_super_secure_jwt_secret_key_here
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Merchant Configuration
# Format: MERCHANT_{MERCHANT_ID}_ORIGIN=https://domain.com
MERCHANT_DEMO_MERCHANT_ORIGIN=https://demo-merchant.com
MERCHANT_ACME_CORP_ORIGIN=https://acme.shop
MERCHANT_SECURE_STORE_ORIGIN=https://secure-store.com

# API Configuration
API_BASE_URL=https://api.ghostpin.com
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Demo MFA
ENABLE_MFA_DEMO=true
MFA_DEMO_TTL_SECONDS=300
NEXT_PUBLIC_ENABLE_MFA_DEMO=true

# Webhooks
WEBHOOK_SECRET=your_webhook_secret
WEBHOOK_URL=https://your-app.com/webhooks/ghostpin

# Email (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your_app_password
ALERT_EMAIL=alerts@yourdomain.com

# File Storage (for logs/backups)
STORAGE_TYPE=local
# STORAGE_TYPE=s3
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_REGION=us-east-1
# S3_BUCKET=ghostpin-storage

# Development
DEBUG=true
MOCK_WEBAUTHN=true
SKIP_SSL_VERIFY=false

# Production
# DEBUG=false
# MOCK_WEBAUTHN=false
# SKIP_SSL_VERIFY=false
